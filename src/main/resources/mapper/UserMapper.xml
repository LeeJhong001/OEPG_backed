<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.oepg.repository.UserRepository">

    <!-- 分页查询用户列表（带条件查询） -->
    <select id="selectPageWithConditions" resultType="org.example.oepg.entity.User">
        SELECT * FROM users
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="realName != null and realName != ''">
                AND real_name LIKE CONCAT('%', #{realName}, '%')
            </if>
            <if test="email != null and email != ''">
                AND email LIKE CONCAT('%', #{email}, '%')
            </if>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        <choose>
            <when test="sortField != null and sortField != '' and sortOrder != null and sortOrder != ''">
                ORDER BY 
                <choose>
                    <when test="sortField == 'username'">username</when>
                    <when test="sortField == 'realName'">real_name</when>
                    <when test="sortField == 'email'">email</when>
                    <when test="sortField == 'role'">role</when>
                    <when test="sortField == 'status'">status</when>
                    <when test="sortField == 'updatedAt'">updated_at</when>
                    <otherwise>created_at</otherwise>
                </choose>
                <choose>
                    <when test="sortOrder == 'asc'">ASC</when>
                    <otherwise>DESC</otherwise>
                </choose>
            </when>
            <otherwise>
                ORDER BY created_at DESC
            </otherwise>
        </choose>
    </select>

</mapper>
